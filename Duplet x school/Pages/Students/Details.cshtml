@page
@model Duplet_x_school.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.IDCode)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.IDCode)
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.StudentSchoolClassEnrollment.SchoolClass.Name)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentSchoolClassEnrollment.SchoolClass.Name)
        </dd>
        <dd class="col-sm-2">
            Optional Subjects
        </dd>
        <dd class="col-sm-10">
            @{
                foreach (var OptSub in Model.Student.StudentOptSubjectEnrollments)
                {
                    @Html.DisplayFor(modelItem => OptSub.OptSubject.Name) <br />
                }
            }
        </dd>
        <dd class="col-sm-2">
            Grades
        </dd>
        <dd class="col-sm-10">
            @{
                foreach (var grade in Model.Student.StudentGradeses)
                {
                    @Html.DisplayFor(modelItem => grade.GradeInStr) <br />
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
